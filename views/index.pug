extends base.pug

block content
	if success
		div(class="alert alert-success")
			| #{success}
	div(class="conatiner", style="margin-left: 20%; margin-right:20%;")
		div(class="row")
			if products
				for product in products
					div(class="col")
						img(src=`/img/${product.image}`, style="width: 100%; height: 200px;")
						a(href=`/product/${product.title}`)
							| #{product.title} 
						p 
							| $#{product.price}
